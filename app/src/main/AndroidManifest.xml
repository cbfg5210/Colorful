<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.ue.colorful">

    <application
        android:name=".ReleaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".feature.main.MainActivity">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>

                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>
        <activity android:name=".feature.material.MDPaletteActivity"/>
        <activity android:name=".feature.pickphoto.PhotoColorPickerActivity"/>
        <activity android:name=".feature.pickpalette.PaletteColorPickerActivity"/>
    </application>

</manifest>