<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- default -->
    <item android:state_pressed="false" android:state_focused="false">
        <shape >
            <solid android:color="@color/col_f91c56" />
            <padding
                android:left="@dimen/widget_size_30"
                android:right="@dimen/widget_size_30"
                android:top="@dimen/widget_size_10"
                android:bottom="@dimen/widget_size_10" />
        </shape>
    </item>

    <!-- button pressed -->
    <item android:state_pressed="true" android:state_focused="false">
        <shape >
            <solid android:color="@color/col_b4284d"/> </shape>
    </item>
</selector>