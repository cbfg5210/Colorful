<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.ue.colorful.widget.PhotoColorPickerView
            android:id="@+id/photoColorPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorPrimaryDark"
            android:padding="10dp"
            app:palette="@drawable/watercolor"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@android:color/white"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <View
                android:id="@+id/linearLayout"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_below="@+id/textView"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/ivMoveRight"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/sel_arrow_right"
                android:onClick="onViewClick"/>

            <ImageView
                android:id="@+id/ivMoveUp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/ivMoveRight"
                android:background="@drawable/sel_arrow_up"
                android:onClick="onViewClick"/>

            <ImageView
                android:id="@+id/ivThumbToggle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/ivMoveUp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/ivMoveRight"
                android:background="@drawable/sel_thumb_toggle"
                android:onClick="onViewClick"/>

            <ImageView
                android:id="@+id/ivMoveLeft"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/ivThumbToggle"
                android:background="@drawable/sel_arrow_left"
                android:onClick="onViewClick"/>

            <ImageView
                android:id="@+id/ivMoveDown"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignLeft="@+id/ivMoveUp"
                android:layout_below="@+id/ivThumbToggle"
                android:layout_marginTop="10dp"
                android:background="@drawable/sel_arrow_down"
                android:onClick="onViewClick"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>