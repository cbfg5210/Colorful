<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/widget_size_5">

    <com.ue.library.widget.SquareView
        android:id="@+id/vColor1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:background="@color/black"/>

    <com.ue.library.widget.SquareView
        android:id="@+id/vColor2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/widget_size_1"
        android:layout_marginStart="@dimen/widget_size_1"
        android:layout_weight="1"
        tools:background="@color/black"/>

    <com.ue.library.widget.SquareView
        android:id="@+id/vColor3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/widget_size_1"
        android:layout_marginStart="@dimen/widget_size_1"
        android:layout_weight="1"
        tools:background="@color/black"/>
</LinearLayout>