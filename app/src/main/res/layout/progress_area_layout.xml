<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ProgressBar
        android:layout_width="match_parent"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_height="30dp"
        android:id="@+id/pbTimerProgress"
        android:progressDrawable="@drawable/timer_progress"
        android:max="400" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPointsLabel"
            android:text="@string/points_text"
            android:textColor="@color/text_label"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPointsValue"
            android:textColor="@color/number_label"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_toEndOf="@id/tvPointsLabel"
            android:layout_toRightOf="@id/tvPointsLabel"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvLevelValue"
            android:layout_marginStart="10dp"
            android:textColor="@color/number_label"
            android:layout_marginLeft="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvLevelLabel"
            android:text="@string/level_text"
            android:textColor="@color/text_label"
            android:layout_toStartOf="@id/tvLevelValue"
            android:layout_toLeftOf="@id/tvLevelValue"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_centerVertical="true" />

    </RelativeLayout>

</LinearLayout>
